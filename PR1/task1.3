    class Program
    {
            static int Factorial(int k){
            int factorial = 1;
            if (k == 1 || (k == 2))
            {
                return 1;
            }
            for (int i = 1; i <= k; i++)
            {
                factorial = factorial * i;

            }
            return factorial;
        }
        static void Main(string[] args)
        {
            
            int k = 1;
            int z = -1;
            double sum = 1;
            int step = 0;
            double ci = 1;
            double x = Convert.ToDouble(Console.ReadLine());
            double e = Convert.ToDouble(Console.ReadLine());
            while (ci > e)
            {
				// ---check--- аналогично, рассчёт неоптимален
                ci = (z * (Factorial(2 * k))*Math.Pow(x,k)) / ((1 - 2 * k)*(Factorial(k))* (Factorial(k)))*(Math.Pow(4,k)); 
                k++;
                step++;
                sum = sum + ci;
                z = -z;
            }
            Console.WriteLine(sum);
            Console.WriteLine(step);
            Console.ReadKey();

        }


    }

